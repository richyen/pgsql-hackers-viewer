# Development image: Go + Air, code mounted at runtime
FROM golang:1.22-alpine
RUN apk add --no-cache git ca-certificates
# Install Air for live reload (requires Go 1.22+)
RUN go install github.com/air-verse/air@v1.52.3
ENV PATH="/go/bin:$PATH"
WORKDIR /app
EXPOSE 8080
# Code is mounted via docker-compose; Air watches and rebuilds on change
CMD ["air", "-c", ".air.toml"]
